<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_text_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send" />
    </LinearLayout>

    <Button
        android:id="@+id/main_bu_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Go Forward" />

    <Button
        android:id="@+id/main_bu_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_bu_a"
        android:layout_alignBottom="@+id/main_bu_a"
        android:layout_centerHorizontal="true"
        android:text="Brake" />

    <Button
        android:id="@+id/main_bu_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_bu_b"
        android:layout_alignBottom="@+id/main_bu_b"
        android:layout_alignParentRight="true"
        android:text="Turn Right" />

    <Button
        android:id="@+id/main_bu_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/main_bu_w"
        android:layout_marginTop="24dp"
        android:text="Turn Left" />

    <Button
        android:id="@+id/main_bu_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_bu_b"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Go Backward" />

    <Button
        android:id="@+id/main_bu_kya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_bu_spin"
        android:layout_alignBottom="@+id/main_bu_spin"
        android:layout_toRightOf="@+id/main_bu_dance"
        android:text="Say Kya" />

    <Button
        android:id="@+id/main_bu_autopilot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_bu_s"
        android:layout_marginTop="64dp"
        android:layout_toRightOf="@+id/main_bu_w"
        android:text="AutoPilot" />

    <Button
        android:id="@+id/main_bu_dance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_bu_autopilot"
        android:layout_alignBottom="@+id/main_bu_autopilot"
        android:layout_alignLeft="@+id/main_bu_b"
        android:text="Dance" />

    <Button
        android:id="@+id/main_bu_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/main_bu_dance"
        android:layout_alignBottom="@+id/main_bu_dance"
        android:layout_toLeftOf="@+id/main_bu_s"
        android:text="Talk" />

    <Button
        android:id="@+id/main_bu_spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_bu_talk"
        android:layout_below="@+id/main_bu_dance"
        android:layout_marginTop="34dp"
        android:text="Spin me Round" />

</RelativeLayout>